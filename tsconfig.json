{
    "compilerOptions": {
      "target": "ES2020",
      "lib": [
        "ES2020",
        "DOM",
        "DOM.Iterable"
      ],
      "module": "ES2020",
      "moduleResolution": "node",
      "declaration": true,
      "emitDeclarationOnly": true,
      "declarationDir": "types",
      "removeComments": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "typeRoots": [
        "./types/index.d.ts",
        "node_modules/@types"
      ],
    },
    "include": [
      "src/**.**",
    ],
    "exclude": [
      "node_modules",
      "dist",
      "docs",
      "test"
    ]
  }